package com.bit101.components{	public class CustomLang {		static public const JAPANESE:String = "ja";		static public const ENGLISH:String = "en";		static private var _language:String = "en";				/**		 * 使用する言語を設定します。		 * 		 * @param	language	日本語(ja)か英語(en)を設定します。		 */		public static function setLanguage(language:String):void 		{			switch (language) 			{				case "ja":					_language = language;					break;				default:					_language = "en";					break;			}		}				public static function get language():String		{			return _language;		}	}}